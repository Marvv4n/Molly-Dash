
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id          String   @id @default(cuid())
  name        String
  budget      Float
  platform    String
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  metrics     Json?
  creatives   Creative[]
}

model Creative {
  id          String   @id @default(cuid())
  url         String
  type        String
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  performance Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
